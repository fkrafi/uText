<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.therap.javafest.utext"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:name=".UTextApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.uText" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TextNoteActivity" />
        <activity android:name=".ListNoteActivity" />
        <activity android:name=".AudioNoteActivity" />
        <activity android:name=".ReminderNoteActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".GalleryNoteActivity" />
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_activity_sign_in" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>