<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.therap.javafest.utext"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:name=".UTextApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.uText" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TextNoteActivity"
            android:label="@string/title_activity_text_note" />
        <activity
            android:name=".ListNoteActivity"
            android:label="@string/title_activity_list_note" />
        <activity
            android:name=".ImageNoteActivity"
            android:label="@string/title_activity_image_note" />
        <activity
            android:name=".VideoNoteActivity"
            android:label="@string/title_activity_video_note" />
        <activity
            android:name=".AudioNoteActivity"
            android:label="@string/title_activity_audio_note" />
        <activity
            android:name=".ReminderNoteActivity"
            android:label="@string/title_activity_reminder_note" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" />
    </application>

</manifest>