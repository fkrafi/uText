<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/iv_cd_logo"
            android:src="@drawable/utext_logo_color" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/.EditText"
            android:hint="@string/et_email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etPassword"
            style="@style/.EditText"
            android:hint="@string/et_password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvForgetYourPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:text="@string/tv_forget_your_password"
            android:textColor="#666666"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bLogIn"
            style="@style/.Button"
            android:background="@drawable/log_in_button"
            android:text="@string/b_log_in"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bSignUp"
            style="@style/.Button"
            android:background="@drawable/sign_up_button"
            android:text="@string/b_sign_up"
            android:textColor="#ffffff" />
    </LinearLayout>

</ScrollView>