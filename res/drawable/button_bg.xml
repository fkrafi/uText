<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#ECE8E6" />

            <stroke android:width="1dp" android:color="#C9C5BF" />

            <padding android:bottom="15dp" android:left="10dp" android:right="10dp" android:top="15dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#ECE8E6" android:startColor="#FAF4F1" />

            <stroke android:width="1dp" android:color="#C9C5BF" />

            <padding android:bottom="15dp" android:left="10dp" android:right="10dp" android:top="15dp" />
        </shape></item>

</selector>