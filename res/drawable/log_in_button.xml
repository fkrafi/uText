<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#0099CC" />

            <stroke android:width="1dp" android:color="#33B5E5" />

            <corners android:radius="5dp" />

            <padding android:bottom="12dp" android:left="10dp" android:right="10dp" android:top="12dp" />
        </shape></item>
    <item><shape>
            <corners android:radius="5dp" />

            <gradient android:angle="270" android:endColor="#0099CC" android:startColor="#33B5E5" />

            <stroke android:width="1dp" android:color="#33B5E5" />

            <padding android:bottom="12dp" android:left="10dp" android:right="10dp" android:top="12dp" />
        </shape></item>

</selector>