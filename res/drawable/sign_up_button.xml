<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#CC0000" />

            <stroke android:width="1dp" android:color="#ED1C24" />

            <corners android:radius="5dp" />

            <padding android:bottom="12dp" android:left="10dp" android:right="10dp" android:top="12dp" />
        </shape></item>
    <item><shape>
            <corners android:radius="5dp" />

            <gradient android:angle="270" android:endColor="#CC0000" android:startColor="#ED1C24" />

            <stroke android:width="1dp" android:color="#ED1C24" />

            <padding android:bottom="12dp" android:left="10dp" android:right="10dp" android:top="12dp" />
        </shape></item>

</selector>